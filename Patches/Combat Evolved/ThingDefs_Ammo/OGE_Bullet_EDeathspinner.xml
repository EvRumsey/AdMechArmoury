<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGDeathspinner</defName>
      <label>Monofilament Mesh charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGShurikenCatapult</defName>
    <label>Monofilament Mesh charge</label>
    <ammoTypes>
      <Ammo_OGDeathspinner>Bullet_OGEEDeathspinner</Ammo_OGDeathspinner>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGEEShurikenCatapultBase" ParentName="AmmoBase" Abstract="True">
    <description>Monofilament Mesh ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGDeathspinner</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGEEDeathspinnerBase">
    <defName>Ammo_OGDeathspinner</defName>
    <label>Monofilament Mesh cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/SlingBullet/Plasteel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGEEDeathspinner" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/DeathspinnerShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGEDeathspinner</damageDef>
      <speed>135</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGEEDeathspinner">
    <defName>Bullet_OGEEDeathspinner</defName>
    <label>Monofilament Mesh</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>29</damageAmountBase>
      <armorPenetrationBaseBase>0.95</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>