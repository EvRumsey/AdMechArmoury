<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGTTPulseRifle</defName>
      <label>Pulse charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGTTPulseRifle</defName>
    <label>Pulse charge</label>
    <ammoTypes>
      <Ammo_OGTTPulseRifle>Bullet_OGTTPulseRifle</Ammo_OGTTPulseRifle>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGTTPulseRifleBase" ParentName="AmmoBase" Abstract="True">
    <description>Plasma Pulse Rifle ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGTTPulseRifle</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGTTPulseRifleBase">
    <defName>Ammo_OGTTPulseRifle</defName>
    <label>Plasma Pulse Rifle cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Thermobaric</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGTTPulseRifle" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/PlasmaPulse</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGTPlasmaPulse</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGTTPulseRifle">
    <defName>Bullet_OGTTPulseRifle</defName>
    <label>Plasma Pulse</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>30</damageAmountBase>
      <armorPenetrationBaseBase>0.9</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>