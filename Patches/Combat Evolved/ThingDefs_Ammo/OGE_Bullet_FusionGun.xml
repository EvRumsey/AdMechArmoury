<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGEFusionGun</defName>
      <label>FusionGun charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGEFusionGun</defName>
    <label>FusionGun charge</label>
    <ammoTypes>
      <Ammo_OGEFusionGun>Bullet_OGEFusionGun</Ammo_OGEFusionGun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGEFusionGunBase" ParentName="AmmoBase" Abstract="True">
    <description>FusionGun ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGBrightlance</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGEFusionGunBase">
    <defName>Ammo_OGEFusionGun</defName>
    <label>FusionGun cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGEFusionGun" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/MeltaShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGIMelta</damageDef>
      <speed>50</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGEFusionGun">
    <defName>Bullet_OGEFusionGun</defName>
    <label>FusionGun shot</label>
	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>105</damageAmountBase>
      <armorPenetrationBaseBase>3.0</armorPenetrationBaseBase>
	  <explosionRadius>0.50</explosionRadius>
	  <soundExplode>OGIFL_Explosion</soundExplode>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>