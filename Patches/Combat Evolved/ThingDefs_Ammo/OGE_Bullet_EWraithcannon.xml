<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGWraithcannon</defName>
      <label>Wraith charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGWraithcannon</defName>
    <label>Wraith charge</label>
    <ammoTypes>
      <Ammo_OGWraithcannon>Bullet_OGEEWraithcannon</Ammo_OGWraithcannon>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGEEWraithcannonBase" ParentName="AmmoBase" Abstract="True">
    <description>Wraith ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGWraithcannon</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGEEStarcannonBase">
    <defName>Ammo_OGWraithcannon</defName>
    <label>Wraith cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGEEWraithcannon" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/WraithcannonShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGEWraith</damageDef>
      <speed>135</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGEEWraithcannon">
    <defName>Bullet_OGEEWraithcannon</defName>
    <label>Wraith Blast</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>29</damageAmountBase>
      <armorPenetrationBaseBase>3.0</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>
	
		</value>
	</li>
  </operations>
</Operation>

</Patch>