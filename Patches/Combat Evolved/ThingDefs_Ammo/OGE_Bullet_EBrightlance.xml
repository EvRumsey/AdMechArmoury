<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGBrightlance</defName>
      <label>Brightlance charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGBrightlance</defName>
    <label>Brightlance charge</label>
    <ammoTypes>
      <Ammo_OGBrightlance>Bullet_OGEEBrightlance</Ammo_OGBrightlance>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGEEBrightlanceBase" ParentName="AmmoBase" Abstract="True">
    <description>Brightlance ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGBrightlance</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGEEBrightlanceBase">
    <defName>Ammo_OGBrightlance</defName>
    <label>Brightlance cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGEEBrightlance" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/LasCShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGILas</damageDef>
      <speed>135</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGEEBrightlance">
    <defName>Bullet_OGEEBrightlance</defName>
    <label>Brightlance shot</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>75</damageAmountBase>
      <armorPenetrationBaseBase>3.0</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>