<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGShurikenPistol</defName>
      <label>small Shuriken charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGShurikenPistol</defName>
    <label>small Shuriken charge</label>
    <ammoTypes>
      <Ammo_OGShurikenPistol>Bullet_OGEEShurikenPistol</Ammo_OGShurikenPistol>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGEEShurikenPistolBase" ParentName="AmmoBase" Abstract="True">
    <description>small Shuriken ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGShurikenPistol</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGEEShurikenPistolBase">
    <defName>Ammo_OGShurikenPistol</defName>
    <label>small Shuriken cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/SlingBullet/Plasteel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGEEShurikenPistol" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/ShurikenSml</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGEShuriken</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGEEShurikenPistol">
    <defName>Bullet_OGEEShurikenPistol</defName>
    <label>small Shuriken</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>7</damageAmountBase>
      <armorPenetrationBaseBase>0.7</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_OGShurikenPistol</defName>
    <label>make small Shuriken cartridge x300</label>
    <description>Craft 300 small Shuriken cartridges.</description>
    <jobString>Making small Shuriken cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_OGShurikenPistol>300</Ammo_OGShurikenPistol>
    </products>
	<!-- <researchPrerequisite>WRAutoCannon</researchPrerequisite> -->
  </RecipeDef>
	
		</value>
	</li>
  </operations>
</Operation>

</Patch>