<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGIPlasmaCulverin</defName>
      <label>Plasma Cannon charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGIPlasmaCulverin</defName>
    <label>Plasma Cannon charge</label>
    <ammoTypes>
      <Ammo_OGIPlasmaCulverin>Bullet_OGIPlasmaCulverin</Ammo_OGIPlasmaCulverin>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGIPlasmaCulverinBase" ParentName="AmmoBase" Abstract="True">
    <description>Plasma Cannon ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGIPlasmaCulverin</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGIPlasmaCulverinBase">
    <defName>Ammo_OGIPlasmaCulverin</defName>
    <label>Plasma Cannon cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Thermobaric</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGIPlasmaCulverin" ParentName="BaseBullet" Abstract="true">
	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/PlamsShotLrg</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGIPlasmaCannon</damageDef>
      <speed>55</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGIPlasmaCulverin">
    <defName>Bullet_OGIPlasmaCulverin</defName>
    <label>Plasma shot</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>70</damageAmountBase>
      <armorPenetrationBaseBase>3.0</armorPenetrationBaseBase>
	  <explosionRadius>1.05</explosionRadius>
	  <soundExplode>OGIPC_Explosion</soundExplode>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>