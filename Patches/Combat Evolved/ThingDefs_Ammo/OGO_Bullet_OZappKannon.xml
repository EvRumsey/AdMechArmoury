<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGOOZappKannon</defName>
      <label>Zapp charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGOOZappKannon</defName>
    <label>Zapp charge</label>
    <ammoTypes>
      <Ammo_OGOOZappKannon>Bullet_OGOOZappKannon</Ammo_OGOOZappKannon>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGOOZappKannonBase" ParentName="AmmoBase" Abstract="True">
    <description>Zapp ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGOOZappKannon</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGOOZappKannonBase">
    <defName>Ammo_OGOOZappKannon</defName>
    <label>Zapp cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGOOZappKannon" ParentName="BaseBullet" Abstract="true">
 	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/LightningBolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGILas</damageDef>
      <speed>105</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGOOZappKannon">
    <defName>Bullet_OGOOZappKannon</defName>
    <label>Zapp</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>75</damageAmountBase>
	  <explosionRadius>0.55</explosionRadius>
      <armorPenetrationBaseBase>0.95</armorPenetrationBaseBase>
	  <soundExplode>OGIPP_Explosion</soundExplode>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>