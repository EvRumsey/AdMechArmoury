<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoTransuranic_Arquebus</defName>
      <label>transuranic charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Transuranic_Arquebus</defName>
    <label>transuranic charge</label>
    <ammoTypes>
      <Ammo_Transuranic_Arquebus>Bullet_Transuranic_Arquebus</Ammo_Transuranic_Arquebus>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="Transuranic_ArquebusBase" ParentName="AmmoBase" Abstract="True">
    <description>transuranic ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGILasCannon</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="Transuranic_ArquebusBase">
    <defName>Ammo_Transuranic_Arquebus</defName>
    <label>transuranic cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseTransuranic_Arquebus" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/TransuranicShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGITransuranic</damageDef>
      <speed>105</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseTransuranic_Arquebus">
    <defName>Bullet_Transuranic_Arquebus</defName>
    <label>transuranic shell</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>75</damageAmountBase>
      <armorPenetrationBaseBase>3.0</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>