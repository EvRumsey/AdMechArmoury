<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGTTKrootRifle</defName>
      <label>Kroot ammo</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGTTKrootRifle</defName>
    <label>Kroot ammo</label>
    <ammoTypes>
      <Ammo_OGTTKrootRifle>Bullet_OGTTKrootRifle</Ammo_OGTTKrootRifle>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGTTKrootRifleBase" ParentName="AmmoBase" Abstract="True">
    <description>Kroot ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGTTKrootRifle</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGTTKrootRifleBase">
    <defName>Ammo_OGTTKrootRifle</defName>
    <label>Kroot cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGTTKrootRifle" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/BoltShotSml</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGTKroot</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGTTKrootRifle">
    <defName>Bullet_OGTTKrootRifle</defName>
    <label>Kroot round</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>20</damageAmountBase>
      <armorPenetrationBaseBase>0.65</armorPenetrationBaseBase>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>