<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
		<li Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>	
		
		
    <ThingCategoryDef>
      <defName>AmmoOGAuto</defName>
      <label>Auto shells</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGAutoHeavy</defName>
    <label>Autocannon shells</label>
    <ammoTypes>
      <Ammo_OGAutocannon>Bullet_OGCCRAutocannon</Ammo_OGAutocannon>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGAuto</defName>
    <label>Auto rounds</label>
    <ammoTypes>
      <Ammo_OGAuto>Bullet_OGAuto</Ammo_OGAuto>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="OGCCRAutocannonBase" ParentName="AmmoBase" Abstract="True">
    <description>Autocannon shells</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGAuto</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="OGCCRAutocannonBase">
    <defName>Ammo_OGAutocannon</defName>
    <label>Autocannon shell</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="OGCCRAutocannonBase">
    <defName>Ammo_OGAuto</defName>
    <label>Auto round</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGCCRAutocannon" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/AutoShotLrg</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGCRAC</damageDef>
      <speed>135</speed>
    </projectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGCCRAutocannon">
    <defName>Bullet_OGCCRAutocannon</defName>
    <label>Autocannon shell</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>9</damageAmountBase>
      <armorPenetrationBase>0.4</armorPenetrationBase>
    </projectile>
  </ThingDef>
  
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGCCRAutocannon">
    <defName>Bullet_OGAuto</defName>
    <label>Auto bullet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>9</damageAmountBase>
      <armorPenetrationBase>0.4</armorPenetrationBase>
    </projectile>
  </ThingDef>

		
			</value>
		</li>
	
  </operations>
</Operation>

</Patch>