<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGOOPlasmaDeffgun</defName>
      <label>Deffgun charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGOOPlasmaDeffgun</defName>
    <label>Deffgun charge</label>
    <ammoTypes>
      <Ammo_OGOOPlasmaDeffgun>Bullet_OGOOPlasmaDeffgun</Ammo_OGOOPlasmaDeffgun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGOOPlasmaDeffgunBase" ParentName="AmmoBase" Abstract="True">
    <description>Deffgun ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGOOPlasmaDeffgun</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGOOPlasmaDeffgunBase">
    <defName>Ammo_OGOOPlasmaDeffgun</defName>
    <label>Deffgun cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Thermobaric</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGOOPlasmaDeffgun" ParentName="BaseBullet" Abstract="true">
	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/PlamsShotLrg</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>OGIPlasmaCannon</damageDef>
      <speed>55</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGOOPlasmaDeffgun">
    <defName>Bullet_OGOOPlasmaDeffgun</defName>
    <label>Deffgun blast</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>100</damageAmountBase>
      <armorPenetrationBaseBase>2.5</armorPenetrationBaseBase>
	  <explosionRadius>2.55</explosionRadius>
	  <soundExplode>OGIPC_Explosion</soundExplode>
    </projectile>
  </ThingDef>

		</value>
	</li>
  </operations>
</Operation>

</Patch>