<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>OG_Apparel_Cloak</defName>
		<label>cloak</label>
    <modExtensions>
      <li Class="AdeptusMechanicus.VisibleAccessoryDefExtension">
        <order>1</order>
        <northtop>false</northtop>
					<NorthOffset>0.0</NorthOffset>
					<SouthOffset>0</SouthOffset>
					<EastOffset>0.001</EastOffset>
					<WestOffset>0.001</WestOffset>
      </li>
    </modExtensions>
		<description>A full-body garment, While it may look primitive, it is effective at insulating the wearer.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Common/Cloak/Cloak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2000</WorkToMake>
			<Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.75</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.75</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.8</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Common/Cloak/Cloak</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
				<li>NormalCloak</li>
				<li>Cloak</li>
			</tags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<!--
		<colorGenerator Class="ColorGenerator_Options">
